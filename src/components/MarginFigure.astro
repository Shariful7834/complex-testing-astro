const { src, srcDark, alt } = Astro.props;
---

<figure class="m-0 md:mr-[-53%] md:float-right md:clear-end md:w-[53%] px-6">
    <img src={src} alt={alt} class="w-full h-auto py-0 block dark:hidden" />
    {srcDark && <img src={srcDark} alt={alt} class="w-full h-auto py-0 hidden dark:block" />}
    <figcaption class="block px-6 md:px-0 my-4">
        <slot />
    </figcaption>
</figure>
